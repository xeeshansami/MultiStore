<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="1dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/category_icon"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:foreground="@drawable/trending_gradient_shape"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/home_background" />

        <TextView
            android:id="@+id/category_name"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="#fff"
            android:textSize="16sp" />

        <Button
            android:visibility="gone"
            android:layout_marginLeft="5sp"
            android:id="@+id/viewAllBtnIDOfMarkets"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_toRightOf="@+id/category_icon"
            android:background="@drawable/home_background"
            android:text="View All"
            android:textColor="@color/colorPrimary"></Button>
    </RelativeLayout>


</androidx.cardview.widget.CardView>